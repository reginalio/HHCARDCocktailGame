<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Now stir"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#ff504b9d"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:id="@+id/textView" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:text="time"
        android:id="@+id/countDownTextView"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/goToFinishButton"
        android:layout_alignStart="@+id/goToFinishButton"
        android:layout_marginTop="20dp" />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="148dp"
        android:text="Finish"
        android:textSize="25sp"
        android:background="#c84f99b5"
        android:textColor="#ffffffff"
        android:id="@+id/goToFinishButton"
        android:onClick="goToFinish"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>